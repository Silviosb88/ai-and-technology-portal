{
  "name": "portal-educativo-ia",
  "version": "1.1.0",
  "type": "module",
  "description": "Portal Educativo de IA & Tecnologia - Sistema completo com galeria, tutoriais e showcase",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=ai-and-technology-portal-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name ai-and-technology-portal",
    "deploy:full": "npm run build && npm run db:migrate:prod && wrangler pages deploy dist --project-name ai-and-technology-portal",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "test:prod": "curl https://ai-and-technology-portal.pages.dev/api/stats/global",
    "db:create:prod": "wrangler d1 create ai-and-technology-portal-production",
    "db:migrate:local": "wrangler d1 migrations apply ai-and-technology-portal-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply ai-and-technology-portal-production",
    "db:seed:local": "wrangler d1 execute ai-and-technology-portal-production --local --file=./seed.sql",
    "db:seed:prod": "wrangler d1 execute ai-and-technology-portal-production --file=./seed.sql",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed:local",
    "db:console:local": "wrangler d1 execute ai-and-technology-portal-production --local",
    "db:console:prod": "wrangler d1 execute ai-and-technology-portal-production",
    "pages:create": "wrangler pages project create ai-and-technology-portal --production-branch main --compatibility-date 2024-01-01",
    "pages:list": "wrangler pages project list",
    "pages:delete": "wrangler pages project delete ai-and-technology-portal",
    "secret:set": "wrangler pages secret put",
    "secret:list": "wrangler pages secret list --project-name ai-and-technology-portal",
    "domain:add": "wrangler pages domain add",
    "git:commit": "git add . && git commit -m",
    "git:push": "git push origin main",
    "git:deploy": "git add . && git commit -m 'Deploy: production update' && git push origin main && npm run deploy",
    "backup": "echo 'Backup URL: https://page.gensparksite.com/project_backups/tooluse_v6FmPwLzQNCQ7Q7UmmBbnw.tar.gz'"
  },
  "dependencies": {
    "hono": "^4.9.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250917.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  },
  "keywords": [
    "artificial-intelligence",
    "education",
    "gallery",
    "tutorials",
    "cloudflare-pages",
    "hono",
    "typescript"
  ],
  "author": "Silvio - Analista de Informação",
  "license": "MIT",
  "repository": {
    "type": "git", 
    "url": "https://github.com/Silviosb88/ai-and-technology-portal.git"
  },
  "homepage": "https://ai-and-technology-portal.pages.dev"
}